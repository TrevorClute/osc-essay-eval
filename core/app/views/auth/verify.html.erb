<div class="container">
  <% if flash[:alert] %><div class="alert"><%= flash[:alert] %></div><% end %>

  <div class="card">
    <div class="card-header">
      <h2>Verify Identity</h2>
      <p>Check your email for the 6-digit code</p>
    </div>

    <%= form_with url: verify_code_path, local: true do |f| %>
      <div class="form-group">
        <label>Enter Code</label>
        <%= f.text_field :otp_code, required: true, placeholder: "123456", style: "text-align: center; letter-spacing: 5px; font-size: 24px;" %>
      </div>
      <%= f.submit "Verify & Login", class: "btn" %>
    <% end %>
  </div>
</div>
