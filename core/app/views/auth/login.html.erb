<div class="container">
  <% if flash[:alert] %><div class="alert"><%= flash[:alert] %></div><% end %>
  
  <div class="card">
    <div class="card-header">
      <h2>OSC Access</h2>
      <p>Enter your @osc.edu or @osu.edu email</p>
    </div>

    <%= form_with url: send_code_path, local: true do |f| %>
      <div class="form-group">
        <label>Email Address</label>
        <%= f.email_field :email, required: true, placeholder: "name@osc.edu" %>
      </div>
      <%= f.submit "Send Access Code", class: "btn" %>
    <% end %>
  </div>
</div>
